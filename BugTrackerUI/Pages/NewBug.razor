@page "/new-bug"

<h3>Add New Bug</h3>
<EditForm Model=AddBug>
	<InputText @bind-Value=@AddBug.Title placehoder="Enter Title" />
	<InputText @bind-Value=@AddBug.Description placehoder="Enter Description" />
	<InputNumber @bind-Value=@AddBug.Priority placeholder="Enter Priority" />
	<button type="submit">Add Bug</button>
</EditForm>

@code {
	public Bug AddBug { get; set; } = new Bug();
}
